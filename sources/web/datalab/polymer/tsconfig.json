{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "removeComments": true
  },
  "include": [
    "**/*.ts",
    "../../../../third_party/externs/ts/polymer/polymer.d.ts"
  ],
  "exclude": [
    "bower_components"
  ],
  "files": [
    "bower_components/polymer-decorators/global.d.ts"
  ]
}
